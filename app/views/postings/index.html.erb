<h1>All job postings</h1>

<%= link_to 'Add new job posting', new_posting_path %>
 
  <% @postings.each do |posting| %>
    <section class="job-posting">
      
      <div class="header">
        <h3><%= link_to posting.title, posting %> (<%= posting.jobLocation %>)</h3>
        <% if posting.applied? %>
          Applied for!
        <% end %>
        
      </div>

      <div class="company">
        <h2><a href="<%= posting.hiringOrganizationUrl %>"><%= posting.hiringOrganization %></a></h2>
      </div>

      <div class="date-posted">
        <% if posting.datePosted %>
          <p>Posted <%= posting.datePosted.strftime("%B %d") %></p>
        <% end %>
      </div>

      <div class="application">
        <p>Requires <%= posting.submissionRequirements %><br>
        <% unless posting.applicationUrl.blank? %>
          <%= link_to 'Apply online', posting.applicationUrl %> | 
        <% end %>
        <%= link_to 'Original posting', posting.url %><br>
        <%= link_to 'More information', posting %> | 
        <%= link_to 'Delete', posting_path(posting), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>

    </section>
  <% end %>
