<header class="page-header">
  <h3>Let's invite someone!</h3>
  <h1><%= t "devise.invitations.new.header" %></h1>
</header>



<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :id => 'invitation-form'} do |f| %>
  <p>Want to invite your best friend to use suitor? Okay!</p>
  <%= devise_error_messages! %>
  <fieldset class="primary">
        <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    <% resource.class.invite_key_fields.each do |field| -%>
      <div>
        <%= f.label field %>
        <%= f.text_field field %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit t("devise.invitations.new.submit_button") %>
    </div>
  </fieldset>

<% end %>
