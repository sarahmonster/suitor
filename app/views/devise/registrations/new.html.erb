<header class="page-header">
  <h1><%= t('Sign up') %></h1>
</header>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "skinny-form"}) do |f| %>
  <p>It&rsquo;s <strong>free</strong> and takes less than <strong>30 seconds.</strong> Already have an account? <%= link_to "Login", new_user_session_path %></p>

  <fieldset class="primary">

  <h3>Register an account</h3>

  <h4><span><%= t('Sign up with') %></span></h4>

  <div>
    <%= link_to user_omniauth_authorize_path(:facebook), id: 'facebook' do %>
      <i class="icon-facebook"></i>Facebook
    <% end %>
    <!--
    <%= link_to user_omniauth_authorize_path(:facebook), id: 'twitter' do %>
      <i class="icon-twitter"></i>Twitter
    <% end %>
    -->
    <button id="twitter"><i class="icon-twitter"></i>Twitter</button>
  </div>

  <h4><span><%= t('or with email') %></span></h4>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: t("users.email.placeholder"), type: 'text' %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: '······' %>
  </div>

  <div class="actions">
    <input type="submit" value="Sign up">
  </div>

  </fieldset>
<% end %>
